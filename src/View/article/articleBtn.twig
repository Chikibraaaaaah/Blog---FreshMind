{% block button %}

    <div class="row d-flex ">

        <div class="col ">

        <button>
            <a href="index.php?access=article_get&id={{article.id}}">Voir les commentaires</a>
        </button>

            {% if loggedUser.role > 0 %}
            
                <button><a href="index.php?access=article_modify&id={{article.id}}">Modifier</a></button>
                <button><a href="index.php?access=article_confirmDelete&id={{article.id}}">Supprimer</a></button>
            
            {% endif %}
            
        
        </div>

        {% if not loggedUser %}
        
            <div class="col-3">
                <p>Pour consulter les commentaires, il faut être authentifié.</p>
                <button>S'authentifier</button>
            </div>
        
        {% endif %}

    </div>

{% endblock %}