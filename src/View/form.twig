{% extends "layout/layout.twig" %}

    {% block form %}

    <div class="container">
    
        <div class="row">
        
            <div class="col">
            
            <h2 class="text-center">Restons en contact</h2>

        <form class="col-5 m-auto" action="index.php?access=user_contact" method="post">

        <div class="form-group mb-2">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" id="nom" placeholder="Dupont" name="nom">
        </div>

            <div class="form-group mb-2">
                <label for="prenom">Prénom</label>
                <input type="text" class="form-control" id="prenom" placeholder="Pierre" name="prenom">
            </div>

            <div class="form-group mb-2">
                <label for="email">Adresse email</label>
                <input type="email" class="form-control" id="email" placeholder="k8Yp5@example.com" name="email">
            </div>


        <div class="form-group mb-2">
            <label for="precision">Précision sur votre demande</label>
            <select class="form-control" id="precision" name="precision">
            <option>Besoin d'une automatisation</option>
            <option>Formations recommandées</option>
            <option>Autres</option>
            </select>
        </div>

        <div class="form-group mb-2">
            <label for="demande">Votre demande</label>
            <textarea class="form-control" id="demande" name="demande" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>

           </form>
            
            </div>
        
        </div>
    
    </div>

     

        




    {% endblock %}