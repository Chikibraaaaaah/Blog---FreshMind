{% extends "layout/layout.twig" %}

{% block main %}

    <div class="d-flex justify-content-center container container-fluid mt-5">
        <div class="mt-5">

            <h1 class="text-center">Bienvenue sur Touneti Blog</h1>

            <div class="row">
                {% block alert %}
                    {% if alert %}
                            <div class="alert alert-{{ alert.type }} alert-dismissible fade show text-center" role="alert">
                                {{ alert.message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                    {% endif %}
                {% endblock %}

                {% block hero %}
                    {% include "layout/hero.twig" %}
                {% endblock %}
            </div>

            <div class="row d-flex justify-content-center">
                <h2 class="text-center">Retrouvez toutes mes derni√®res publications</h2>
                {% include "article/articleList.twig" %}
            </div>

        </div>
    </div>
{% endblock %}
